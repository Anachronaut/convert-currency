<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>


<h1>Currency Converter</h1>

<form action="/convert">
  <label for="amtCurrency">Amount of selected currency to be converted</label>
  <input type="number" step="any" name="amtCurrency" id="amtCurrency" required/>

  <br>

  <label for="from_currency">Convert <b>from</b></label> <!-- Drop-down for "convert from" currency -->
  <select name="from_currency" id="from_currency">
    <option value="USD">US Dollars</option>
    <option value="EUR">Euros</option>
    <option value="JPY">Japanese Yen</option>
  </select>

  <br>

  <label for="to_currency">Convert <b>to</b></label> <!-- Drop-down for "convert to" currency -->
  <select name="to_currency" id="to_currency">
    <option value="EUR">Euros</option>
    <option value="JPY">Japanese Yen</option>
    <option value="USD">US Dollars</option>
  </select>

  <br>

  <button type="submit">Convert</button>


</form>
